<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#cccccc"
    tools:context="bertking.com.useandroidannotations.activity.MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_back"
            android:layout_centerVertical="true"
            android:padding="15dp"
            />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录界面"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            />

    </RelativeLayout>



   <ImageView
       android:id="@+id/image"
       android:layout_width="56dp"
       android:layout_height="56dp"
       android:src="@mipmap/ic_header"
       android:layout_gravity="center_horizontal"
       />

    <LinearLayout
        android:layout_below="@id/image"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_marginTop="20dp"
        >
        <EditText
            android:id="@+id/et_phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:inputType="number"
            android:hint="手机号"
            android:textSize="16sp"
            android:background="@null"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#4196b8"/>
        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="密码"
            android:inputType="textPassword"
            android:background="@null"
            />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#3fc5cc"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/btn_bookshelf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="进入书单"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="40dp"
        />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录"
        android:layout_gravity="center_horizontal"
        android:background="#ffffff"
        />

    <TextView
        android:id="@+id/tv_warn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't touch me!"
        android:textColor="#ff1500"
        android:textSize="20sp"
        android:padding="8dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        />

    <bertking.com.useandroidannotations.view.AutoAdjustSizeEditText
        android:id="@+id/et_autoAdjustSize"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        />
</LinearLayout>
